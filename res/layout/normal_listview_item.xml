<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/normal_item_ly1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/im1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/channel_gv_item_default_logo"
                android:scaleType="fitXY"
                android:src="@drawable/um" />

            <View
                android:id="@+id/im1_c1"
                android:layout_width="1dip"
                android:layout_height="1dip"
                android:background="@drawable/im_c"
                android:duplicateParentState="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" >

                <TextView
                    android:id="@+id/im_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dip"
                    android:text="9.6分"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/im1_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:text="危险关系"
            android:textColor="#3c3c3c"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/im1_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:text="这是一个简单的接受信息F"
            android:textColor="#5c5c5c"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_item_ly2"
